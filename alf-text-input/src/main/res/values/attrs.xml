<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AlfTextInput">
        <attr name="isRegex" format="boolean" />
        <attr name="errorMessage" format="string" />
        <attr name="text" format="string" />
        <attr name="hint" format="string" />
        <attr name="helperText" format="string" />
        <attr name="placeHolderText" format="string" />
        <attr name="titleText" format="string" />
        <attr name="textColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="inputType">
            <flag name="text" value="0" />
            <flag name="phone" value="1" />
            <flag name="email" value="2" />
            <flag name="number" value="3" />
            <flag name="password" value="4" />
        </attr>

    </declare-styleable>

</resources>